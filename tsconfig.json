{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2020",
		"lib": ["esnext", "DOM", "WebWorker"],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"useDefineForClassFields": true,
		"allowJs": true,
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}