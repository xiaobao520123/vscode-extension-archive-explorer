{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"moduleResolution": "Node",
		"lib": [
			"es2020",
			"WebWorker",
			"DOM",
		],
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}